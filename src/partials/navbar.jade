.navbar.navbar-fixed-top: .navbar-inner: .container
	//- a.btn.btn-navbar(data-toggle="collapse", data-target=".nav-collapse")
	//- 	span.icon-list-ul
	//- angular provides (collapse="navCollapsed")
	//- but not sure how to wire it up to the responsive layout change
	div.nav-collapse
		ul.nav.pull-right
			li.dropdown#show-settings(ng-show="loginp()")
				a.dropdown-toggle
					i.icon-cog
					| Settings
					b.caret
				ul.dropdown-menu
					li: a(href="javascript:;") Account Settings
					li.divider
					li: a(href="#/faq") Help
			li.dropdown(ng-show="loginp()")
				a.dropdown-toggle
					i.icon-user
					span(id="show-user-name")
						| {{ user().fullname }}
					b.caret
				ul.dropdown-menu
					li: a(href="javascript:;") My Profile
					li: a(href="javascript:;") My Groups
					li.divider
					li: a(ng-click="logout()") Logout
			li.dropdown#show-register(ng-hide="loginp()")
				a(href="#/register")
					i.icon-cog
					| Register
					b.caret
			li#show-login(ng-hide="loginp()")
				a(id="login-link", ng-click="openlogin=true")
					i.icon-user
					| Login
					b.caret
				div(modal="openlogin && !loginp()", close="openlogin=false")
					div(ng-include="'partials/loginform.html'")
