.container
	.row
		.span8
			.wrapper
				tabset
					tab(heading='News')
						.article(ng-repeat='item in getblog["news"]')
							h1 {{item.title}}
							.left
								img(src="http://placehold.it/120x80")
								.clearfix
								rating(value="item.rate", max="5", readonly="false")
							.right
								.meta
									ul
										li {{item.country}}
										li {{item.owner}}
										li {{item.month}} {{item.day}}
								p {{item.content}}

					tab(heading='Articles')
						.article(ng-repeat='item in getblog["articles"]')
							h1 {{item.title}}
							img(src="http://placehold.it/120x80")
							rating(value="item.rate", max="5", readonly="false")
							.meta
								{{item.country}} - {{item.owner}} - {{item.month}} {{item.day}}
							p {{item.content}}

					tab(heading='Activities')
						.article(ng-repeat='item in getblog["activities"]')
							h1 {{item.title}}
							img(src="http://placehold.it/120x80")
							rating(value="item.rate", max="5", readonly="false")
							.meta
								{{item.country}} - {{item.owner}} - {{item.month}} {{item.day}}
							p {{item.content}}

					tab(heading='Calendar')
						div(calendar="'all'")
							
					tab(heading='Discussion')
						.article(ng-repeat='item in getblog["discussion"]')
							h1 {{item.title}}
							img(src="http://placehold.it/120x80")
							rating(value="item.rate", max="5", readonly="false")
							.meta
								{{item.country}} - {{item.month}} {{item.day}}
							p {{item.content}}
