							h1 {{item.title}}
							<img src="http://placehold.it/120x100">
							.meta
								{{item.country}} - {{item.owner}} - {{item.month}} {{item.day}}
							p {{item.content}}

					tab(heading='Calendar', select='rendercal()')
						div#calendar(calendar="rp.region", region="rp")
					tab(heading='Discussion')
						.article(ng-repeat='item in getblog["discussion"]')
							h1 {{item.title}}
							<img src="http://placehold.it/120x100">
							.meta
