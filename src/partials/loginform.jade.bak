div(ng-controller="LoginCtrl")
	form(name='loginform', method='post')
		h3() Login
		input(type='text', ng-model='userid' , placeholder='login name')
		br
		input(type='password', ng-model='password' , placeholder='password')
		br
		button(id='login-submit', ng-click='signUp()', class='btn btn-success') Sign up
		button(id='login-submit', ng-click='login();openlogin=false;$root.openlogin=false', ng-disabled='validateFields()', class='btn btn-primary') Sign in
